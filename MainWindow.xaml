<Window x:Class="FlappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlappyBird"
        mc:Ignorable="d"
        Title="FlappyBird" Height="450" Width="800">
    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" ImageSource="/FlappyBird;component/hatter.png" />
        <ImageBrush x:Key="PipeBrush" ImageSource="/FlappyBird;component/bambusz.png" />
        <ImageBrush x:Key="BirdBrush" ImageSource="/FlappyBird;component/dobocsillag2.png" />
    </Window.Resources>
    <Grid>
        <Canvas x:Name="GameCanvas"
                Focusable="True"
                KeyDown="Canvas_KeyDown">

            <!-- HÁTTÉR -->
            <Canvas.Background>
                <ImageBrush ImageSource="/hatter.png"/>
            </Canvas.Background>

            <!-- FUTÓ PONTSZÁM -->
            <TextBlock x:Name="ScoreText"
                       Text="0"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       Canvas.Left="380"
                       Canvas.Top="20"/>

            <!-- ====== CSÖVEK – VÁLTOZTATÁS NÉLKÜL ====== -->

            <!-- ALSÓ -->
            <Rectangle x:Name="PipeBottom1" Width="95">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle x:Name="PipeBottom2" Width="95">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle x:Name="PipeBottom3" Width="95">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <!-- FELSŐ (180° FORGATVA – EZ FONTOS!) -->
            <Rectangle x:Name="PipeTop1" Width="95" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="180"/>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle x:Name="PipeTop2" Width="95" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="180"/>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle x:Name="PipeTop3" Width="95" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="180"/>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <!-- MADÁR -->
            <Rectangle x:Name="Bird"
                       Width="68"
                       Height="70"
                       Canvas.Left="82"
                       Canvas.Top="217">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/dobocsillag2.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <!-- ===== GAME OVER UI (RÁTEGELVE) ===== -->
            <Border x:Name="GameOverPanel"
                    Visibility="Collapsed"
                    Canvas.Left="250"
                    Canvas.Top="140"
                    Width="300"
                    Background="#AA000000"
                    CornerRadius="15"
                    Padding="20">

                <StackPanel>
                    <TextBlock x:Name="FinalScoreText"
                               Text="Pontszám: 0"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    <Button x:Name="RestartButton"
                            Content="Újraindítás"
                            FontSize="18"
                            Padding="10"
                            Background="#FF4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="RestartButton_Click"/>
                </StackPanel>
            </Border>

        </Canvas>

    </Grid>
</Window>
