<Window x:Class="FlappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlappyBird"
        mc:Ignorable="d"
        Title="FlappyBird" Height="450" Width="800">
    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" ImageSource="/FlappyBird;component/hatter.png" />
        <ImageBrush x:Key="PipeBrush" ImageSource="/FlappyBird;component/bambusz.png" />
        <ImageBrush x:Key="BirdBrush" ImageSource="/FlappyBird;component/dobocsillag2.png" />
    </Window.Resources>
    <Grid>

        <!-- ================= JÁTÉK ================= -->
        <Canvas x:Name="GameCanvas"
                Focusable="True"
                KeyDown="Canvas_KeyDown">

            <!-- HÁTTÉR -->
            <Canvas.Background>
                <ImageBrush ImageSource="/hatter.png"/>
            </Canvas.Background>

            <!-- SCORE -->
            <TextBlock x:Name="ScoreText"
                       Text="0"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       Canvas.Left="380"
                       Canvas.Top="20"
                       Visibility="Collapsed"/>

            <!-- ALSÓ CSÖVEK -->
            <Rectangle x:Name="PipeBottom1" Width="95" Visibility="Collapsed">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle x:Name="PipeBottom2" Width="95" Visibility="Collapsed">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle x:Name="PipeBottom3" Width="95" Visibility="Collapsed">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <!-- FELSŐ CSÖVEK -->
            <Rectangle x:Name="PipeTop1" Width="95" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="180"/>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle x:Name="PipeTop2" Width="95" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="180"/>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle x:Name="PipeTop3" Width="95" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="180"/>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <!-- MADÁR -->
            <Rectangle x:Name="Bird"
                       Width="68"
                       Height="70"
                       Canvas.Left="82"
                       Canvas.Top="217"
                       Visibility="Collapsed">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/dobocsillag2.png"/>
                </Rectangle.Fill>
            </Rectangle>

            <!-- 🌧️ ESŐ (Medium módhoz) -->
            <Rectangle x:Name="Rain1" Width="5" Height="40" Fill="#99CFFFFF" Visibility="Collapsed"/>
            <Rectangle x:Name="Rain2" Width="5" Height="45" Fill="#99CFFFFF" Visibility="Collapsed"/>
            <Rectangle x:Name="Rain3" Width="5" Height="35" Fill="#99CFFFFF" Visibility="Collapsed"/>
            <Rectangle x:Name="Rain4" Width="5" Height="50" Fill="#99CFFFFF" Visibility="Collapsed"/>
            <Rectangle x:Name="Rain5" Width="5" Height="42" Fill="#99CFFFFF" Visibility="Collapsed"/>
            <Rectangle x:Name="Rain6" Width="5" Height="38" Fill="#99CFFFFF" Visibility="Collapsed"/>
            <Rectangle x:Name="Rain7" Width="5" Height="48" Fill="#99CFFFFF" Visibility="Collapsed"/>
            <Rectangle x:Name="Rain8" Width="5" Height="44" Fill="#99CFFFFF" Visibility="Collapsed"/>
            <Rectangle x:Name="Rain9" Width="5" Height="36" Fill="#99CFFFFF" Visibility="Collapsed"/>
            <Rectangle x:Name="Rain10" Width="5" Height="52" Fill="#99CFFFFF" Visibility="Collapsed"/>

            <!-- 🌫️ KÖD FEDŐRÉTEG (Hard) -->
            <Rectangle x:Name="FogOverlay"
                       Width="800"
                       Height="450"
                       Canvas.Left="0"
                       Canvas.Top="0"
                       Visibility="Collapsed"
                       IsHitTestVisible="False">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#CCFFFFFF" Offset="0"/>
                        <GradientStop Color="#88FFFFFF" Offset="0.5"/>
                        <GradientStop Color="#CCFFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>


            <!-- GAME OVER PANEL -->
            <Border x:Name="GameOverPanel"
                    Visibility="Collapsed"
                    Canvas.Left="250"
                    Canvas.Top="140"
                    Width="300"
                    Background="#AA000000"
                    CornerRadius="15"
                    Padding="20">

                <StackPanel>
                    <TextBlock Text="GAME OVER"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="Red"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="FinalScoreText"
                               Text="Pontszám: 0"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    <Button x:Name="RestartButton"
                            Content="Újraindítás"
                            FontSize="18"
                            Padding="10"
                            Background="#FF4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Click="RestartButton_Click"/>
                </StackPanel>
            </Border>

            <!-- 🔙 VISSZA GOMB (LEGELÖL VAN!) -->
            <Button x:Name="BackButton"
                    Content="⟵ Vissza"
                    FontSize="16"
                    Padding="8,4"
                    Background="#AA000000"
                    Foreground="White"
                    BorderThickness="0"
                    Canvas.Left="10"
                    Canvas.Top="10"
                    Visibility="Collapsed"
                    Click="BackButton_Click"/>

        </Canvas>

        <!-- ================= MENÜ ================= -->
        <Grid x:Name="MenuOverlay" Background="#FF0E1A25">

            <!-- FŐMENÜ -->
            <StackPanel x:Name="MainMenu"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="300">

                <TextBlock Text="FLAPPY BIRD"
                           FontSize="42"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <Button Content="PLAY"
                        FontSize="22"
                        Padding="14"
                        Click="PlayButton_Click"/>
            </StackPanel>

            <!-- NEHÉZSÉG -->
            <StackPanel x:Name="DifficultyMenu"
                        Visibility="Collapsed"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="300">

                <TextBlock Text="Select Difficulty"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <Button Content="Easy"
                        FontSize="18"
                        Margin="0,0,0,10"
                        Click="EasyButton_Click"/>

                <Button Content="Medium"
                        FontSize="18"
                        Margin="0,0,0,10"
                        Click="MediumButton_Click"/>

                <Button Content="Hard"
                        FontSize="18"
                        Click="HardButton_Click"/>
            </StackPanel>

        </Grid>

    </Grid>
</Window>
