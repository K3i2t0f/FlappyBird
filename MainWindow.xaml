<Window x:Class="FlappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlappyBird"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" ImageSource="/FlappyBird;component/hatter.png" />
        <ImageBrush x:Key="PipeBrush" ImageSource="/FlappyBird;component/bambusz.png" />
        <ImageBrush x:Key="BirdBrush" ImageSource="/FlappyBird;component/dobocsillag2.png" />
    </Window.Resources>
    <Grid>
        <Canvas x:Name="GameCanvas"
                Focusable="True"
                KeyDown="Canvas_KeyDown">

            <Canvas.Background>
                <ImageBrush ImageSource="/hatter.png"/>
            </Canvas.Background>


            <Rectangle x:Name="PipeBottom1" Height="354" Canvas.Left="199" Canvas.Top="275" Width="95" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            
            <Rectangle x:Name="PipeBottom2" Height="354" Canvas.Left="450" Canvas.Top="335" Width="95" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>

            
            <Rectangle x:Name="PipeBottom3" Height="354" Canvas.Left="690" Canvas.Top="188" Width="95" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>
           

            <Rectangle x:Name="PipeTop1" Height="354" Canvas.Left="199" Canvas.Top="-160" Width="95" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="180"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>
            
            
            <Rectangle x:Name="PipeTop2" Height="354" Canvas.Left="450" Canvas.Top="-102" Width="95" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="180"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>
            
            
            <Rectangle x:Name="PipeTop3" Height="354" Canvas.Left="690" Canvas.Top="-259" Width="95" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="180"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/bambusz.png"/>
                </Rectangle.Fill>
            </Rectangle>
            
            
            <Rectangle x:Name="Bird" Height="70" Canvas.Left="82" Canvas.Top="217" Width="68" RenderTransformOrigin="0.458,0.524" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/dobocsillag2.png"/>
                </Rectangle.Fill>
            </Rectangle>


            <Button x:Name="RestartButton"
                Content="Restart"
                Width="90" Height="32"
                Canvas.Right="10" Canvas.Top="10"
                Visibility="Collapsed"
                Click="RestartButton_Click" />

        </Canvas>

    </Grid>
</Window>
